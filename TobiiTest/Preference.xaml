        <TextBox HorizontalAlignment="Center" Height="20" Margin="19.668,242,0,0" TextWrapping="Wrap" Text="Copyright © 2018 A Team. All Rights Reserved." VerticalAlignment="Top" Width="272" TextChanged="TextBox_TextChanged_1" FontSize="11" BorderThickness="0"/>


